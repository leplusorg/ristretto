<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.leplus</groupId>
  <artifactId>ristretto</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>ristretto</name>
  <packaging>jar</packaging>
  <description>A small library of useful java classes.</description>
  <url>https://github.com/thomasleplus/ristretto</url>
  <licenses>
    <license>
      <name>GNU General Public License (GPL)</name>
      <url>https://www.gnu.org/licenses/gpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <url>https://github.com/thomasleplus/ristretto</url>
    <connection>scm:git:git://github.com/thomasleplus/ristretto.git</connection>
    <developerConnection>scm:git:git@github.com:thomasleplus/ristretto.git</developerConnection>
  </scm>
  <developers>
    <developer>
      <email>thomas.leplus@gmail.com</email>
      <name>Thomas Leplus</name>
      <url>https://github.com/thomasleplus</url>
      <id>thomasleplus</id>
    </developer>
  </developers>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-all</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava-testlib</artifactId>
      <version>18.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-compiler-plugin</artifactId>
	<version>3.5.1</version>
	<configuration>
          <source>1.5</source>
          <target>1.5</target>
	</configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-pmd-plugin</artifactId>
	<version>3.6</version>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>findbugs-maven-plugin</artifactId>
	<version>3.0.4</version>
      </plugin>
    </plugins>
  </reporting>
</project>
